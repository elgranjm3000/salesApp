{
  "expo": {
    "name": "Sales App / Chrystal Mobile",
    "slug": "SalesAPp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/favicon-32x32.png",
    "scheme": "salesapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.elgranjm.SalesAPp",
      "infoPlist": {
        "NSFaceIDUsageDescription": "Esta aplicación utiliza Face ID para permitir el acceso rápido y seguro a tu cuenta.",
        "NSBiometricUsageDescription": "Esta aplicación utiliza autenticación biométrica para permitir el acceso rápido y seguro a tu cuenta."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/logo.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.elgranjm.SalesAPp",
      "permissions": [
        "android.permission.USE_FINGERPRINT",
        "android.permission.USE_BIOMETRIC",
        "CAMERA"
      ],
      "statusBar": {
        "barStyle": "dark-content",
        "backgroundColor": "transparent",
        "translucent": true,
        "hidden": false
      },
      "navigationBar": {
        "visible": "hidden",
        "backgroundColor": "transparent"
      },
      "softwareKeyboardLayoutMode": "pan"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-local-authentication",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "b5c84581-7905-484b-b5c8-35d16a311ca0"
      }
    },
    "owner": "elgranjm"
  }
}
